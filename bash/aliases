# Git
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias ghist="git log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short"
alias ghist-last="ghist --max-count=1"



# Mongo
alias mongo="mongod run --config /usr/local/Cellar/mongodb/1.6.5-x86_64/mongod.conf"

