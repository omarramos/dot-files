# Shell
#alias cdr="cd ~/../.."
alias ls="ls -a"
alias reload="source ~/.bashrc"
alias cleardns="dscacheutil -flushcache"

# Rails
alias r="rails $1 $2 $3 $4 $5 $6 $7"
alias dbm="rake db:migrate"
alias dbc="rails db"

# Mongo
alias mongo="mongod run --config /usr/local/Cellar/mongodb/1.6.5-x86_64/mongod.conf"

function dev-wp {
  cd ~/Dev/Work/wallpulse/src/
  rvm 1.9.2@wallpulse
}

function wp-start {
  cd ~/Dev/work/wallpulse/src/
  terminitor start
}

# Bundler aliases
alias b="bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"
